<div ng-controller="app.views.users as vm">
    <div>
        <h2>Список пользователей</h2>
    </div>
    <!--<a href="#/createUser" >Создать пользователя</a> !-->

    <div>
        <button type="button">
            <i class="fa fa-plus btn tlb"><a href="#/createUser" style="text-decoration: none;"> Создать пользователя</a> </i>
        </button>
    </div>
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Имя</th>
                <th>Логин</th>
                <th>Почта</th>
            </tr>
        </thead>
        <tbody>
            <tr data ng-repeat="user in vm.users">
                <td>
                    <a href="" ng-click="vm.showUser(user.id)"><i class="fa fa-pencil-square-o fa-1x-half"></i></a>
                    <a href="" ng-click="vm.deleteUser(user.id)"><i class="fa fa-times fa-1x-half"></i></a>
                </td>
                <td ng-bind="user.name"></td>
                <td ng-bind="user.login"></td>
                <td ng-bind="user.email"></td>
            </tr>
        </tbody>

    </table>
</div>