<div ng-controller="app.views.users as vm">    
     <div>         
         <h2>Список пользователей</h2> 
     </div>  
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Логин</th>               
                <th>Почта</th>            
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="user in vm.users">
                <td><a href="" ng-click="vm.showUser(user.id)">select</a></td>
                <td>{{user.name}} </td>
                <td>{{user.login}}</td>                
                <td>{{user.email}}</td>
                <td><a href="" ng-click="vm.deleteUser(user.id)">Delete</a></td>
            </tr>     
        </tbody>
        
</table>    
</div>