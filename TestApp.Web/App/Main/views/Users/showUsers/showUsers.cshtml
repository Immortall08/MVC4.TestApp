<div ng-controller="app.views.showUsers as vm">
    <!--<alert ng-repeat="alert in alerts" type="{{alert.type}}" close="vm.closeAlert($index)">{{alert.msg}}</alert>-->
    <div><alert ng-repeat="alert in alerts" type="{{alert.type}}" close="vm.closeAlert(alert)">{{ alert.msg }}</alert></div>
    <div>
        <h2>@L("ListOfUsers")</h2>
    </div>
    <div>
        <button type="button" ng-click="vm.createUser()">
            <i class="fa fa-plus btn tlb"> @L("CreateUser")</i>
        </button>
        <i class="fa fa-search">@L("SearchField")</i>    <input ng-model="searchText">
    </div>

    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th></th>
                <th>@L("UserName")</th>
                <th>@L("UserLogin")</th>
                <th>@L("UserEmail")</th>
            </tr>
        </thead>
        <tbody>
            <tr data ng-repeat="user in vm.users | filter:searchText">
                <td>
                    <a href="" ng-click="vm.editUser(user.id)"><i class="fa fa-pencil-square-o fa-1x-half"></i></a>
                    <a href="" ng-click="vm.deleteUser(user.id)"><i class="fa fa-times fa-1x-half"></i></a>
                </td>
                <td ng-bind="user.name"></td>
                <td ng-bind="user.login"></td>
                <td ng-bind="user.email"></td>
            </tr>
        </tbody>

    </table>
    <pagination  ng-change="vm.getAllUsers()" total-items="vm.totalItems" ng-model="vm.currentPage" max-size="vm.maxSize" class="pagination-sm" boundary-links="true"></pagination>
    <div>currentPage {{vm.currentPage}}</div>
</div>